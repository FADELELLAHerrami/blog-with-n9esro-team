
<div class="container">
  <div class="card p-5 bg-white">
      <%= form_with model: @article, data: { controller: "editor" } do |t| %>

        <div class="form-group btn btn-secondary btn-lg w-100 ">
          <%= t.label :background, class: "file-upload-btn btn" do %>
            <p class="text-white" style="font-family: 'Roboto', sans-serif;font-size: 30px;">Add a cover image here</p>
            <%= t.file_field :background, class: "", id: "file-upload" %>
          <% end %>
        </div>

        <div class="form-group">
          <%= t.text_field :title, placeholder: "New post title here ...", class: "no-border border-0", style: "font-size: 40px;outline: none; width: 100%;" %>
        </div>

        <div class="textArea">
          <%= t.hidden_field :body, id: 'article_content_hidden' %>
          <div id="article_content" class="article-content" data-editor-target="article_content" style="padding:0; margin: 0;" placeholder="Write your post content here...">
          <%# Needs to have the article content if it exists already %>
          </div>
        </div>

      </div>
        <div class="form-group">
          <%= t.submit class: "rounded-dark-button mt-2", value: "Publish" %>
        </div>

      <% end %>

</div>
