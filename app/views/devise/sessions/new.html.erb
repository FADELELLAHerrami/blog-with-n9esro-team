<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'your-form-class' }) do |f| %>
  <div class="form-inputs">
    <%# EMAIL %>
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", class: "form-input" } %>
    <%# PASSWORD %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password", class: "form-input" } %>
    <%= f.input :remember_me, as: :boolean, input_html: { class: "your-checkbox-class" } if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "form-button" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
